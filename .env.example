# CORS allowlist (comma-separated). Do NOT use * in production.
MCP_CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Set to "true" only if you rely on cookies / auth credentials in the browser.
MCP_CORS_ALLOW_CREDENTIALS=false

# Request body size limit (bytes). Keep this small for tool endpoints.
MCP_MAX_BODY_BYTES=262144

# Optional bearer token auth. If set, requests must include:
#   Authorization: Bearer <token>
# MCP_AUTH_TOKEN=

# Uvicorn bind (used by `python -m mcp_secure_python_starter`)
HOST=127.0.0.1
PORT=8000
RELOAD=0

